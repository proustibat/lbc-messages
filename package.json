{
  "name": "lbc-messages",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "4.1.2",
    "web-vitals": "0.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@testing-library/user-event": "12.2.2",
    "@types/jest": "26.0.15",
    "@types/node": "12.19.6",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "prettier": "2.2.0",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.0",
    "pretty-quick": "3.1.0",
    "surge": "0.21.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:watch": "react-scripts --inspect-brk test --runInBand --no-cache",
    "eject": "react-scripts eject",
    "lint": "prettier -w \"./**/*.{js,ts,tsx,json}\"",
    "predeploy": "mv build/index.html build/200.html",
    "deploy": "surge --project ./build",
    "postdeploy": "mv build/200.html build/index.html"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged--verbose --pattern \"./**/*.{js,ts,tsx,json}\"",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
