{
  "name": "lbc-messages",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "4.1.2",
    "web-vitals": "1.0.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.1.4",
    "@storybook/addon-essentials": "6.1.4",
    "@storybook/addon-links": "6.1.4",
    "@storybook/node-logger": "6.1.4",
    "@storybook/preset-create-react-app": "3.1.5",
    "@storybook/react": "6.1.4",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@testing-library/user-event": "12.2.2",
    "@types/jest": "26.0.15",
    "@types/node": "12.19.6",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "jest-junit": "12.0.0",
    "prettier": "2.2.0",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.0",
    "pretty-quick": "3.1.0",
    "surge": "0.21.7",
    "ts-jest": "26.4.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "tdd": "react-scripts test",
    "test": "CI=true react-scripts test --collectCoverage=true --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "lint": "prettier -w \"./**/*.{js,ts,tsx,json}\"",
    "predeploy": "mv build/index.html build/200.html",
    "deploy": "surge --project ./build",
    "postdeploy": "mv build/200.html build/index.html",
    "predeploy:coverage": "mv coverage/lcov-report/index.html coverage/lcov-report/200.html",
    "deploy:coverage": "surge --project ./coverage/lcov-report",
    "postdeploy:coverage": "mv coverage/lcov-report/200.html coverage/lcov-report/index.html",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "predeploy:storybook": "mv storybook-static/index.html storybook-static/200.html",
    "deploy:storybook": "surge --project ./storybook-static",
    "postdeploy:storybook": "mv storybook-static/200.html storybook-static/index.html"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged--verbose --pattern \"./**/*.{js,ts,tsx,json}\"",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "./**/*.{ts,tsx,js}",
      "!./**/*.stories.{tsx,ts}",
      "!./src/stories/**/*.tsx",
      "!./src/react-app-env.d.ts",
      "!./src/reportWebVitals.ts",
      "!./src/setupTests.ts"
    ]
  }
}
